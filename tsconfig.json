{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "out",
    "module": "es6",
    "target": "es2017",
    "lib": ["es6", "dom", "es2017.string"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "out",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
